{
  "identifier": "main",
  "description": "permissions for the main window",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:default",
    "dialog:default",
    "store:default",
    "shell:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-write-file"
  ],
  "scopes": {
    "fs": [
      { "path": "$DOCUMENT/**", "allow": ["read", "write"] },
      { "path": "$DOWNLOAD/**", "allow": ["read", "write"] }
    ]
  }
}
